<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

	<changeSet id="meta-eug-17" logicalFilePath="path-independent" author="eugene" context="postgres">
		<delete
			schemaName="apps"
			tableName="meta_adms">
		</delete>

		<rollback></rollback>
	</changeSet>

	<changeSet id="meta-eug-18" logicalFilePath="path-independent" author="eugene" context="postgres">
		<comment>Load demo data to table: meta_adms</comment>
	    <loadData
	            encoding="UTF-8"
	            relativeToChangelogFile="true"
	            file="data/meta_adms2.csv"
	            quotchar="'"
	            schemaName="apps"
	            separator=";"
	            tableName="meta_adms">
	        
	        <column name="id" 				type="NUMERIC"/>
	        <column name="code" 			type="STRING"/>
	        <column name="name"				type="STRING"/>
	        <column name="short_name"		type="STRING"/>
	        <column name="image_path"		type="STRING"/>
	    </loadData>
		
		<rollback>
        	<delete schemaName="apps" tableName="meta_adms" />
        </rollback>	
	</changeSet>

	<changeSet id="meta-eug-19" logicalFilePath="path-independent" author="eugene"  context="postgres">
		<dropSequence schemaName="apps" sequenceName="meta_adms_s"/>
		<rollback>
			<createSequence
					incrementBy="1"
					schemaName="apps"
					sequenceName="meta_adms_s"
					startValue="7"/>
		</rollback>
	</changeSet>

	<changeSet id="meta-eug-20" logicalFilePath="path-independent" author="eugene" context="postgres">
		<comment>Creating sequence for table: meta_adms</comment>
		<createSequence
				incrementBy="1"
				schemaName="apps"
				sequenceName="meta_adms_s"
				startValue="8"/>
	</changeSet>
</databaseChangeLog>
