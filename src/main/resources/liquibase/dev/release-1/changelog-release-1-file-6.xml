<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    

    <changeSet id="adm-eug-20" logicalFilePath="path-independent" author="eugene" context="postgres">
        <comment>Creating table: adm_user_roles</comment>
        <createTable tableName="adm_user_roles" schemaName="apps">            
            <column name="user_id" type="number">
                <constraints nullable="false"/>
            </column>
           
            <column name="role_id" type="number">
                <constraints nullable="false"/>
            </column>
            
            <column name="start_date" type="date">
                <constraints nullable="true"/>
            </column>
                                    			                                                 
            <column name="end_date" type="date">
                <constraints nullable="true"/>
            </column>             
        </createTable>
    </changeSet>

	<changeSet id="adm-eug-21" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating primary key for table: adm_user_roles</comment>
	    <addPrimaryKey 
	            columnNames="user_id, role_id"
	            constraintName="pk_adm_user_roles"
	            schemaName="apps"
	            tableName="adm_user_roles"/>
	</changeSet>
	
	<changeSet id="adm-eug-22" logicalFilePath="path-independent" author="eugene" context="postgres">
		<comment>Load demo data to table: adm_user_roles</comment>
	    <loadData
	            encoding="UTF-8"
	            relativeToChangelogFile="true"
	            file="data/adm_user_roles.csv"
	            quotchar="'"
	            schemaName="apps"
	            separator=";"
	            tableName="adm_user_roles">
	        
	        <column name="user_id"		type="NUMERIC"/>
	        <column name="role_id"		type="NUMERIC"/>
	        <column name="start_date"	type="DATE"/>
	    </loadData>
		
		<rollback>
        	<delete schemaName="apps" tableName="adm_user_roles" />
        </rollback>	
	</changeSet>
</databaseChangeLog>
