<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="meta-eug-13" logicalFilePath="path-independent" author="eugene" context="postgres">
        <comment>Creating table: meta_media</comment>
        <createTable tableName="meta_media" schemaName="apps">            
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="code" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="short_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="image_path" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

	<changeSet id="meta-eug-14" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating primary key for table: meta_media</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_meta_media"
	            schemaName="apps"
	            tableName="meta_media"/>
	</changeSet>
	
	<changeSet id="meta-eug-15" logicalFilePath="path-independent" author="eugene" context="postgres">
		<comment>Load demo data to table: meta_media</comment>
	    <loadData
	            encoding="UTF-8"
	            relativeToChangelogFile="true"
	            file="data/meta_media.csv"
	            quotchar="'"
	            schemaName="apps"
	            separator=";"
	            tableName="meta_media">
	        
	        <column name="id" 				type="NUMERIC"/>
	        <column name="code" 			type="STRING"/>
	        <column name="name"				type="STRING"/>
	        <column name="short_name"		type="STRING"/>
	        <column name="image_path"		type="STRING"/>
	    </loadData>
		
		<rollback>
        	<delete schemaName="apps" tableName="meta_media" />
        </rollback>	
	</changeSet>	
	
	<changeSet id="meta-eug-16" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating sequence for table: meta_media</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="meta_media_s"
	            startValue="6"/>
	</changeSet>	
	
</databaseChangeLog>
