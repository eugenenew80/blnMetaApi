<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    

    <changeSet id="adm-eug-30" logicalFilePath="path-independent" author="eugene" context="postgres">
        <comment>Creating table: meta_adms</comment>
        <createTable tableName="meta_adms" schemaName="apps">            
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="code" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="short_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="image_path" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

	<changeSet id="adm-eug-31" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating primary key for table: meta_adms</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_meta_adms"
	            schemaName="apps"
	            tableName="meta_adms"/>
	</changeSet>
	
	<changeSet id="adm-eug-32" logicalFilePath="path-independent" author="eugene" context="postgres">
		<comment>Load demo data to table: meta_adms</comment>
	    <loadData
	            encoding="UTF-8"
	            relativeToChangelogFile="true"
	            file="data/meta_adms.csv"
	            quotchar="'"
	            schemaName="apps"
	            separator=";"
	            tableName="meta_adms">
	        
	        <column name="id" 				type="NUMERIC"/>
	        <column name="code" 			type="STRING"/>
	        <column name="name"				type="STRING"/>
	        <column name="short_name"		type="STRING"/>
	        <column name="image_path"		type="STRING"/>
	    </loadData>
		
		<rollback>
        	<delete schemaName="apps" tableName="meta_adms" />
        </rollback>	
	</changeSet>	
	
	<changeSet id="adm-eug-33" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating sequence for table: meta_adms</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="meta_adms_s"
	            startValue="4"/>
	</changeSet>	
	
</databaseChangeLog>
