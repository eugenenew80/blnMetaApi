<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    

    <changeSet id="eug-93" logicalFilePath="path-independent" author="eugene" context="postgres">        
        <comment>Creating table: meta_modules</comment>
        <createTable tableName="meta_modules" schemaName="apps">            
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="code" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            
            <column name="short_name" type="varchar(30)">
                <constraints nullable="false"/>
            </column>            
        </createTable>
    </changeSet>

	<changeSet id="eug-94" logicalFilePath="path-independent" author="eugene" context="postgres"> 
	    <comment>Creating primary key for table: meta_modules</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_meta_modules"
	            schemaName="apps"
	            tableName="meta_modules"/>
	</changeSet>
	
	<changeSet id="eug-95" logicalFilePath="path-independent" author="eugene" context="postgres">
		<comment>Load demo data to table: meta_modules</comment>
	    <loadData
	            encoding="UTF-8"
	            relativeToChangelogFile="true"
	            file="data/meta_modules.csv"
	            quotchar="'"
	            schemaName="apps"
	            separator=";"
	            tableName="meta_modules">
	        
	        <column name="id" 				type="NUMERIC"/>
	        <column name="code" 			type="STRING"/>
	        <column name="name"				type="STRING"/>
	    </loadData>
		
		<rollback>
        	<delete schemaName="apps" tableName="meta_modules" />
        </rollback>	
	</changeSet>	
	
	<changeSet id="eug-96" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating sequence for table: meta_modules</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="meta_modules_s"
	            startValue="11"/>
	</changeSet>	
	
</databaseChangeLog>
